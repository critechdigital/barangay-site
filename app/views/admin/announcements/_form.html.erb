<%= form_with(model: [:admin, announcement], class: "space-y-6") do |f| %>
  <% if announcement.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-3 text-sm text-red-600">
      <% announcement.errors.full_messages.each do |msg| %>
        <p><%= msg %></p>
      <% end %>
    </div>
  <% end %>

  <div>
    <%= f.label :title, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :title, placeholder: "e.g. Barangay Assembly on March 15", class: "w-full px-4 py-3 border border-gray-300 rounded-lg" %>
  </div>

  <div>
    <%= f.label :body, "Content", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_area :body, rows: 8, placeholder: "Write your announcement here...", class: "w-full px-4 py-3 border border-gray-300 rounded-lg" %>
  </div>

  <div class="flex items-center gap-2">
    <%= f.check_box :published, class: "w-4 h-4 text-blue-600 rounded" %>
    <%= f.label :published, "Publish immediately", class: "text-sm text-gray-700" %>
  </div>

  <div class="flex gap-4">
    <%= link_to "Cancel", admin_announcements_path, class: "flex-1 py-3 text-center border border-gray-300 rounded-lg text-gray-600 hover:bg-gray-50" %>
    <%= f.submit announcement.persisted? ? "Update Announcement" : "Post Announcement", class: "flex-1 py-3 bg-blue-700 text-white font-bold rounded-lg hover:bg-blue-800 cursor-pointer" %>
  </div>
<% end %>
