          </div>
          <div class="flex gap-2">
            <%= link_to "Edit", edit_admin_announcement_path(ann), class: "text-blue-600 text-sm hover:underline" %>
            <%= button_to "Delete", admin_announcement_path(ann), method: :delete, data: { turbo_confirm: "Delete this announcement?" }, class: "text-red-500 text-sm hover:underline" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white border border-gray-200 rounded-lg p-8 text-center text-gray-400">
      <p class="text-lg mb-2">No announcements yet</p>
