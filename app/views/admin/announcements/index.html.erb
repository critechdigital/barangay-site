<div class="max-w-4xl mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">Announcements</h1>
    <%= link_to "ï¼‹ New Announcement", new_admin_announcement_path, class: "px-4 py-2 bg-blue-700 text-white rounded-lg text-sm font-medium hover:bg-blue-800" %>
  </div>

  <% if @announcements.any? %>
    <div class="space-y-3">
      <% @announcements.each do |ann| %>
        <div class="bg-white border border-gray-200 rounded-lg p-4 flex justify-between items-start">
          <div>
            <h3 class="font-bold"><%= ann.title %></h3>
            <p class="text-gray-500 text-sm mt-1"><%= truncate(ann.body, length: 100) %></p>
            <p class="text-xs text-gray-400 mt-2">
              <%= ann.published? ? "âœ… Published" : "ðŸ“ Draft" %>
              Â· <%= ann.created_at.strftime("%b %d, %Y") %>
