<%= form_with(model: [:admin, official], class: "space-y-6") do |f| %>
  <% if official.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-3 text-sm text-red-600">
      <% official.errors.full_messages.each do |msg| %>
        <p><%= msg %></p>
      <% end %>
    </div>
  <% end %>

  <div>
    <%= f.label :name, "Full Name *", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :name, placeholder: "e.g. Juan Dela Cruz", class: "w-full px-4 py-3 border border-gray-300 rounded-lg" %>
  </div>

  <div>
    <%= f.label :position, "Position *", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.select :position, options_for_select(Site::OFFICIAL_POSITIONS, official.position), { include_blank: "Select position" }, class: "w-full px-4 py-3 border border-gray-300 rounded-lg" %>
  </div>

  <div>
    <%= f.label :sort_order, "Display Order", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.number_field :sort_order, value: official.sort_order || 0, class: "w-full px-4 py-3 border border-gray-300 rounded-lg" %>
    <p class="text-xs text-gray-400 mt-1">Lower number = shown first</p>
  </div>

  <div class="flex gap-4">
    <%= link_to "Cancel", admin_officials_path, class: "flex-1 py-3 text-center border border-gray-300 rounded-lg text-gray-600 hover:bg-gray-50" %>
    <%= f.submit official.persisted? ? "Update Official" : "Add Official", class: "flex-1 py-3 bg-blue-700 text-white font-bold rounded-lg hover:bg-blue-800 cursor-pointer" %>
  </div>
<% end %>
