<%= form_with(model: [:admin, service], class: "space-y-6") do |f| %>
  <% if service.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-3 text-sm text-red-600">
      <% service.errors.full_messages.each do |msg| %>
        <p><%= msg %></p>
      <% end %>
    </div>
  <% end %>

  <div>
    <%= f.label :name, "Service Name *", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :name, placeholder: "e.g. Barangay Clearance", class: "w-full px-4 py-3 border border-gray-300 rounded-lg" %>
  </div>

  <div>
    <%= f.label :category, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.select :category, options_for_select(Service::CATEGORIES, service.category), { include_blank: "Select category" }, class: "w-full px-4 py-3 border border-gray-300 rounded-lg" %>
  </div>

  <div class="grid grid-cols-2 gap-4">
    <div>
      <%= f.label :fees, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :fees, placeholder: "e.g. â‚±50-100", class: "w-full px-4 py-3 border border-gray-300 rounded-lg" %>
    </div>
    <div>
      <%= f.label :processing_time, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :processing_time, placeholder: "e.g. 1 day", class: "w-full px-4 py-3 border border-gray-300 rounded-lg" %>
    </div>
  </div>

  <div>
    <%= f.label :requirements, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_area :requirements, rows: 3, placeholder: "e.g. Valid ID, Cedula", class: "w-full px-4 py-3 border border-gray-300 rounded-lg" %>
  </div>

  <div>
    <%= f.label :description, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_area :description, rows: 3, placeholder: "Brief description of this service", class: "w-full px-4 py-3 border border-gray-300 rounded-lg" %>
  </div>

  <div class="flex gap-4">
    <%= link_to "Cancel", admin_services_path, class: "flex-1 py-3 text-center border border-gray-300 rounded-lg text-gray-600 hover:bg-gray-50" %>
    <%= f.submit service.persisted? ? "Update Service" : "Add Service", class: "flex-1 py-3 bg-blue-700 text-white font-bold rounded-lg hover:bg-blue-800 cursor-pointer" %>
  </div>
<% end %>
