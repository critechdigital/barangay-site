<% content_for(:title) { "Services — Admin" } %>
<%= render "admin/nav" %>

<div class="max-w-4xl mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">Barangay Services</h1>
    <%= link_to "＋ Add Service", new_admin_service_path, class: "px-4 py-2 bg-blue-700 text-white rounded-lg text-sm font-medium hover:bg-blue-800" %>
  </div>

  <% if @services.any? %>
    <% @services.group_by(&:category).each do |category, services| %>
      <div class="mb-6">
        <h2 class="text-sm font-bold text-gray-500 uppercase mb-3"><%= category || "Other" %></h2>
        <div class="space-y-2">
          <% services.each do |service| %>
            <div class="bg-white border border-gray-200 rounded-lg p-4 flex justify-between items-center">
              <div>
                <h3 class="font-bold text-sm"><%= service.name %></h3>
                <p class="text-gray-500 text-xs mt-1">
                  Fee: <%= service.fees %> · <%= service.processing_time %>
                </p>
              </div>
              <div class="flex gap-2">
                <%= link_to "Edit", edit_admin_service_path(service), class: "text-blue-600 text-sm hover:underline" %>
                <%= button_to "Delete", admin_service_path(service), method: :delete, data: { turbo_confirm: "Remove this service?" }, class: "text-red-500 text-sm hover:underline" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="bg-white border border-gray-200 rounded-lg p-8 text-center text-gray-400">
      <p class="text-lg mb-2">No services added yet</p>
      <p class="text-sm">Add the services your barangay offers.</p>
    </div>
  <% end %>
</div>
