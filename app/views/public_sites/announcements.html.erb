<% content_for(:title) { "Announcements â€” #{@site.name}" } %>

<div class="bg-blue-50 border-b border-blue-100 py-6">
  <div class="max-w-6xl mx-auto px-4">
    <h1 class="text-2xl font-bold text-blue-900">Announcements</h1>
    <p class="text-gray-600 mt-1">News, advisories, and updates from <%= @site.name %></p>
  </div>
</div>

<div class="max-w-4xl mx-auto px-4 py-8">
  <% if @announcements.any? %>
    <div class="space-y-6">
      <% @announcements.each do |ann| %>
        <article class="bg-white border border-gray-200 rounded-lg p-6">
          <p class="text-xs text-gray-400 mb-2"><%= ann.published_at&.strftime("%B %d, %Y") %></p>
          <h2 class="text-xl font-bold text-blue-900 mb-3"><%= ann.title %></h2>
          <div class="text-gray-700 text-sm leading-relaxed"><%= simple_format(ann.body) %></div>
        </article>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white border border-gray-200 rounded-lg p-8 text-center text-gray-400">
      <p>No announcements yet.</p>
    </div>
  <% end %>
</div>
