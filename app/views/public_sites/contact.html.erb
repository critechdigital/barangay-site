<% content_for(:title) { "Contact â€” #{@site.name}" } %>
<%= render "public_sites/nav" %>

<div class="max-w-5xl mx-auto px-4 py-12">
  <h1 class="text-3xl font-bold mb-8">Contact Us</h1>
  <div class="bg-white border border-gray-200 rounded-lg p-8">
    <div class="grid md:grid-cols-2 gap-8">
      <div class="space-y-4">
        <% if @site.address.present? %>
          <div>
            <h3 class="font-bold text-sm text-gray-500 uppercase">Address</h3>
            <p class="mt-1"><%= @site.address %></p>
          </div>
        <% end %>
        <% if @site.phone.present? %>
          <div>
            <h3 class="font-bold text-sm text-gray-500 uppercase">Phone</h3>
            <p class="mt-1"><%= @site.phone %></p>
          </div>
        <% end %>
        <% if @site.email.present? %>
          <div>
            <h3 class="font-bold text-sm text-gray-500 uppercase">Email</h3>
            <p class="mt-1"><%= mail_to @site.email %></p>
          </div>
        <% end %>
        <% if @site.office_hours.present? %>
          <div>
            <h3 class="font-bold text-sm text-gray-500 uppercase">Office Hours</h3>
            <p class="mt-1"><%= @site.office_hours %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
