<% content_for(:title) { "Contact â€” #{@site.name}" } %>

<div class="bg-blue-50 border-b border-blue-100 py-6">
  <div class="max-w-6xl mx-auto px-4">
    <h1 class="text-2xl font-bold text-blue-900">Contact Us</h1>
    <p class="text-gray-600 mt-1">Reach out to <%= @site.name %></p>
  </div>
</div>

<div class="max-w-4xl mx-auto px-4 py-8">
  <div class="grid md:grid-cols-2 gap-8">
    <div class="bg-white border border-gray-200 rounded-lg p-6">
      <h2 class="font-bold text-blue-900 mb-4">Barangay Hall</h2>
      <div class="space-y-4 text-sm">
        <% if @site.address.present? %>
          <div>
            <p class="text-xs text-gray-500 uppercase font-bold">Address</p>
            <p class="mt-1"><%= @site.address %></p>
          </div>
        <% end %>
        <% if @site.phone.present? %>
          <div>
            <p class="text-xs text-gray-500 uppercase font-bold">Phone</p>
            <p class="mt-1"><a href="tel:<%= @site.phone.gsub(/[\s()-]/, '') %>" class="text-blue-600 hover:underline"><%= @site.phone %></a></p>
          </div>
        <% end %>
        <% if @site.email.present? %>
          <div>
            <p class="text-xs text-gray-500 uppercase font-bold">Email</p>
            <p class="mt-1"><%= mail_to @site.email, @site.email, class: "text-blue-600 hover:underline" %></p>
          </div>
        <% end %>
        <% if @site.office_hours.present? %>
          <div>
            <p class="text-xs text-gray-500 uppercase font-bold">Office Hours</p>
            <p class="mt-1"><%= @site.office_hours %></p>
          </div>
        <% end %>
      </div>
    </div>

    <div class="space-y-6">
      <div class="bg-blue-50 border border-blue-200 rounded-lg p-6">
        <h3 class="font-bold text-blue-900 mb-2">Need a Document?</h3>
        <p class="text-sm text-gray-600 mb-3">Check our Citizen's Charter for requirements and processing times before visiting.</p>
        <%= link_to "View Citizen's Charter â†’", public_site_charter_path(@site.slug), class: "text-sm text-blue-600 font-medium hover:underline" %>
      </div>

      <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-6">
        <h3 class="font-bold text-yellow-800 mb-2">FOI Request</h3>
        <p class="text-sm text-gray-600 mb-3">Need access to public records? Submit a Freedom of Information request online.</p>
        <%= link_to "Submit FOI Request â†’", public_site_foi_path(@site.slug), class: "text-sm text-yellow-700 font-medium hover:underline" %>
      </div>

      <div class="bg-red-50 border border-red-200 rounded-lg p-6">
        <h3 class="font-bold text-red-800 mb-2">ðŸš¨ Emergency?</h3>
        <p class="text-sm text-gray-600 mb-3">For emergencies, call 911 or check our emergency hotlines directory.</p>
        <%= link_to "Emergency Hotlines â†’", public_site_emergency_path(@site.slug), class: "text-sm text-red-600 font-medium hover:underline" %>
      </div>
    </div>
  </div>
</div>
