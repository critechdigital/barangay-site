<% content_for(:title) { "Documents & Forms â€” #{@site.name}" } %>

<div class="bg-blue-50 border-b border-blue-100 py-6">
  <div class="max-w-6xl mx-auto px-4">
    <h1 class="text-2xl font-bold text-blue-900">Documents & Forms</h1>
    <p class="text-gray-600 mt-1">Downloadable public documents, forms, and official records</p>
  </div>
</div>

<div class="max-w-6xl mx-auto px-4 py-8">
  <% if @categories.any? %>
    <% @categories.each do |category, docs| %>
      <div class="mb-8">
        <h2 class="text-sm font-bold text-gray-500 uppercase mb-4 border-b border-gray-200 pb-2"><%= category %></h2>
        <div class="space-y-2">
          <% docs.each do |doc| %>
            <div class="bg-white border border-gray-200 rounded-lg p-4 flex justify-between items-center hover:border-blue-300 transition">
              <div>
                <h3 class="font-medium text-sm"><%= doc.title %></h3>
                <% if doc.description.present? %>
                  <p class="text-gray-500 text-xs mt-1"><%= doc.description %></p>
                <% end %>
              </div>
              <% if doc.file_url.present? %>
                <%= link_to "ðŸ“¥ Download", doc.file_url, class: "px-4 py-2 bg-blue-50 text-blue-700 rounded-lg text-xs font-medium hover:bg-blue-100 whitespace-nowrap", target: "_blank" %>
              <% else %>
                <span class="text-xs text-gray-400">Coming soon</span>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="bg-white border border-gray-200 rounded-lg p-8 text-center text-gray-400">
      <p class="text-lg mb-2">No documents available yet</p>
      <p class="text-sm">Public documents and downloadable forms will be posted here.</p>
    </div>
  <% end %>
</div>
