<div class="max-w-6xl mx-auto px-4 py-8">
  <% if @categories.any? %>
    <div class="grid md:grid-cols-2 gap-6">
      <% @categories.each do |category, contacts| %>
        <div class="bg-white border border-gray-200 rounded-lg overflow-hidden">
          <div class="bg-gray-50 border-b border-gray-200 px-5 py-3">
            <h2 class="font-bold text-sm text-gray-700 uppercase"><%= category %></h2>
          </div>
          <div class="divide-y divide-gray-100">
            <% contacts.each do |contact| %>
              <div class="px-5 py-3 flex justify-between items-center">
                <span class="text-sm font-medium"><%= contact.name %></span>
                <a href="tel:<%= contact.phone.gsub(/[\s()-]/, '') %>" class="text-blue-700 font-bold text-sm hover:underline">
                  ðŸ“ž <%= contact.phone %>
                </a>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white border border-gray-200 rounded-lg p-8 text-center text-gray-400">
      <p>Emergency contacts are being updated. For emergencies, call <strong class="text-red-600">911</strong>.</p>
    </div>
  <% end %>
</div>
