<%= render "public_sites/nav" %>

<div class="max-w-5xl mx-auto px-4 py-12">
  <h1 class="text-3xl font-bold mb-8">Barangay Officials</h1>
  <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
    <% @officials.each do |o| %>
      <div class="bg-white rounded-xl p-6 text-center shadow-sm border border-gray-100">
        <div class="w-20 h-20 bg-blue-100 rounded-full mx-auto mb-4 flex items-center justify-center text-blue-700 text-2xl font-bold">
          <%= o.name&.first&.upcase || "?" %>
        </div>
        <h3 class="font-bold"><%= o.name %></h3>
        <p class="text-gray-500 text-sm"><%= o.position %></p>
      </div>
    <% end %>
  </div>
</div>
