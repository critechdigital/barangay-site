<% content_for(:title) { "Officials â€” #{@site.name}" } %>

<div class="bg-blue-50 border-b border-blue-100 py-6">
  <div class="max-w-6xl mx-auto px-4">
    <h1 class="text-2xl font-bold text-blue-900">Barangay Officials</h1>
    <p class="text-gray-600 mt-1">Elected and appointed officials of <%= @site.name %></p>
  </div>
</div>

<div class="max-w-6xl mx-auto px-4 py-8">
  <!-- Captain (first official) -->
  <% captain = @officials.first %>
  <% if captain %>
    <div class="bg-white border-2 border-blue-800 rounded-xl p-8 text-center mb-8">
      <div class="w-24 h-24 bg-blue-900 rounded-full mx-auto mb-4 flex items-center justify-center text-white text-3xl font-bold">
        <%= captain.name&.first&.upcase || "?" %>
      </div>
      <h2 class="text-xl font-bold text-blue-900"><%= captain.name %></h2>
      <p class="text-blue-600 font-medium"><%= captain.position %></p>
    </div>
  <% end %>

  <!-- Rest of officials -->
  <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
    <% @officials.drop(1).each do |o| %>
      <div class="bg-white border border-gray-200 rounded-lg p-5 text-center">
        <div class="w-16 h-16 bg-blue-100 rounded-full mx-auto mb-3 flex items-center justify-center text-blue-900 text-xl font-bold">
          <%= o.name&.first&.upcase || "?" %>
        </div>
        <h3 class="font-bold text-sm"><%= o.name %></h3>
        <p class="text-gray-500 text-xs mt-1"><%= o.position %></p>
      </div>
    <% end %>
  </div>
</div>
