<% content_for(:title) { "Services â€” #{@site.name}" } %>
<%= render "public_sites/nav" %>

<div class="max-w-5xl mx-auto px-4 py-12">
  <h1 class="text-3xl font-bold mb-8">Barangay Services</h1>

  <% @services.group_by(&:category).each do |category, services| %>
    <div class="mb-8">
      <h2 class="text-lg font-bold text-blue-700 mb-4"><%= category || "Other" %></h2>
      <div class="grid md:grid-cols-2 gap-4">
        <% services.each do |s| %>
          <div class="bg-white border border-gray-200 rounded-lg p-5">
            <h3 class="font-bold mb-2"><%= s.name %></h3>
            <div class="text-sm text-gray-600 space-y-1">
              <p><strong>Fee:</strong> <%= s.fees %></p>
              <p><strong>Processing Time:</strong> <%= s.processing_time %></p>
              <p><strong>Requirements:</strong> <%= s.requirements %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
