<% content_for(:title) { "Services — #{@site.name}" } %>

<div class="bg-blue-50 border-b border-blue-100 py-6">
  <div class="max-w-6xl mx-auto px-4">
    <h1 class="text-2xl font-bold text-blue-900">Barangay Services</h1>
    <p class="text-gray-600 mt-1">Complete list of services offered by <%= @site.name %></p>
  </div>
</div>

<div class="max-w-6xl mx-auto px-4 py-8">
  <% @services.group_by(&:category).each do |category, services| %>
    <div class="mb-8">
      <h2 class="text-sm font-bold text-gray-500 uppercase mb-4 border-b border-gray-200 pb-2"><%= category || "Other" %></h2>
      <div class="grid md:grid-cols-2 gap-4">
        <% services.each do |s| %>
          <div class="bg-white border border-gray-200 rounded-lg p-5 hover:border-blue-300 transition">
            <h3 class="font-bold text-blue-900 mb-3"><%= s.name %></h3>
            <div class="text-sm text-gray-600 space-y-1">
              <p><strong>Fee:</strong> <%= s.fees %></p>
              <p><strong>Processing Time:</strong> <%= s.processing_time %></p>
              <p><strong>Requirements:</strong> <%= s.requirements %></p>
            </div>
            <% if s.service_steps.any? %>
              <%= link_to "View Step-by-Step Process →", public_site_charter_path(@site.slug, anchor: "service-#{s.id}"), class: "inline-block mt-3 text-xs text-blue-600 hover:underline" %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
