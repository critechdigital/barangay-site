<% content_for(:title) { "#{@site.name} ‚Äî Official Barangay Website" } %>

<!-- Hero Banner -->
<section class="bg-gradient-to-r from-blue-900 to-blue-800 text-white py-12 relative overflow-hidden">
  <img src="https://images.unsplash.com/photo-1596452862239-a9a220e996cd?w=1800&q=80" alt="" class="absolute inset-0 w-full h-full object-cover opacity-15">
  <div class="max-w-6xl mx-auto px-4 relative z-10">
    <div class="md:flex justify-between items-center">
      <div>
        <h2 class="text-3xl md:text-4xl font-bold mb-2">Welcome to <%= @site.name %></h2>
        <% if @site.tagline.present? %>
          <p class="text-blue-200 text-lg"><%= @site.tagline %></p>
        <% end %>
        <p class="text-blue-300 text-sm mt-2">
          <%= [@site.barangay, @site.municipality, @site.province, @site.region].compact_blank.join(", ") %>
        </p>
      </div>
      <div class="mt-6 md:mt-0 flex gap-3">
        <%= link_to "Citizen's Charter ‚Üí", public_site_charter_path(@site.slug), class: "px-5 py-3 bg-yellow-500 text-blue-900 font-bold rounded-lg text-sm hover:bg-yellow-400" %>
        <%= link_to "Services", public_site_services_path(@site.slug), class: "px-5 py-3 bg-white/10 text-white font-medium rounded-lg text-sm hover:bg-white/20 border border-white/30" %>
      </div>
    </div>
  </div>
</section>

<!-- Quick Stats Bar -->
<section class="bg-blue-50 border-b border-blue-100">
  <div class="max-w-6xl mx-auto px-4 py-4">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-center">
      <div>
        <div class="text-2xl font-bold text-blue-800"><%= @site.services.count %></div>
        <div class="text-xs text-gray-500 uppercase">Services Offered</div>
      </div>
      <div>
        <div class="text-2xl font-bold text-blue-800"><%= @site.officials.count %></div>
        <div class="text-xs text-gray-500 uppercase">Elected Officials</div>
      </div>
      <div>
        <div class="text-2xl font-bold text-blue-800"><%= @site.announcements.published.count %></div>
        <div class="text-xs text-gray-500 uppercase">Announcements</div>
      </div>
      <div>
        <div class="text-2xl font-bold text-blue-800"><%= @site.documents.published.count %></div>
        <div class="text-xs text-gray-500 uppercase">Public Documents</div>
      </div>
    </div>
  </div>
</section>

<!-- Latest Announcements -->
<% if @announcements.any? %>
<section class="py-10">
  <div class="max-w-6xl mx-auto px-4">
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-xl font-bold text-blue-900">üì∞ Latest Announcements</h2>
      <%= link_to "View All ‚Üí", public_site_announcements_path(@site.slug), class: "text-sm text-blue-600 hover:underline" %>
    </div>
    <div class="grid md:grid-cols-3 gap-4">
      <% @announcements.each do |ann| %>
        <article class="bg-white border border-gray-200 rounded-lg overflow-hidden hover:shadow-md transition">
          <div class="p-5">
            <p class="text-xs text-gray-400 mb-2"><%= ann.published_at&.strftime("%B %d, %Y") %></p>
            <h3 class="font-bold text-sm mb-2"><%= ann.title %></h3>
            <p class="text-gray-600 text-xs line-clamp-3"><%= truncate(ann.body, length: 150) %></p>
          </div>
        </article>
      <% end %>
    </div>
  </div>
</section>
<% end %>

<!-- Services Quick Access -->
<% if @services.any? %>
<section class="py-10 bg-gray-50">
  <div class="max-w-6xl mx-auto px-4">
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-xl font-bold text-blue-900">üìã Barangay Services</h2>
      <%= link_to "Full Citizen's Charter ‚Üí", public_site_charter_path(@site.slug), class: "text-sm text-blue-600 hover:underline" %>
    </div>
    <div class="grid grid-cols-2 md:grid-cols-3 gap-3">
      <% @services.each do |service| %>
        <div class="bg-white border border-gray-200 rounded-lg p-4 hover:border-blue-300 transition">
          <h3 class="font-bold text-sm text-blue-900"><%= service.name %></h3>
          <div class="mt-2 flex gap-3 text-xs text-gray-500">
            <span>üí∞ <%= service.fees %></span>
            <span>‚è± <%= service.processing_time %></span>
          </div>
        </div>
      <% end %>
    </div>
    <% if @site.services.count > 6 %>
      <div class="text-center mt-4">
        <%= link_to "View all #{@site.services.count} services ‚Üí", public_site_services_path(@site.slug), class: "text-sm text-blue-600 hover:underline" %>
      </div>
    <% end %>
  </div>
</section>
<% end %>

<!-- Officials -->
<% if @officials.any? %>
<section class="py-10">
  <div class="max-w-6xl mx-auto px-4">
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-xl font-bold text-blue-900">üë• Barangay Officials</h2>
      <%= link_to "View All ‚Üí", public_site_officials_path(@site.slug), class: "text-sm text-blue-600 hover:underline" %>
    </div>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
      <% @officials.each do |official| %>
        <div class="bg-white border border-gray-200 rounded-lg p-4 text-center">
          <div class="w-14 h-14 bg-blue-900 rounded-full mx-auto mb-3 flex items-center justify-center text-white text-lg font-bold">
            <%= official.name&.first&.upcase || "?" %>
          </div>
          <h3 class="font-bold text-sm"><%= official.name %></h3>
          <p class="text-gray-500 text-xs"><%= official.position %></p>
        </div>
      <% end %>
    </div>
  </div>
</section>
<% end %>
