<% content_for(:title) { "Create Account â€” BarangaySite" } %>

<div class="min-h-screen flex">
  <!-- Left Panel â€” Image -->
  <div class="hidden lg:flex lg:w-1/2 bg-blue-900 relative overflow-hidden">
    <img src="https://images.unsplash.com/photo-1590650516494-0c8e4a4dd67e?w=1200&q=80" alt="Philippine community" class="absolute inset-0 w-full h-full object-cover opacity-30">
    <div class="relative z-10 flex flex-col justify-center px-16 text-white">
      <div class="mb-8">
        <div class="w-16 h-16 bg-white/10 rounded-full flex items-center justify-center text-3xl mb-6">ğŸ›</div>
        <h2 class="text-3xl font-bold leading-tight">Put your barangay<br>on the map.</h2>
        <p class="text-blue-200 mt-4 leading-relaxed">
          Join barangays across the Philippines building their official online presence.
          Compliant, professional, and ready in minutes.
        </p>
      </div>
      <div class="space-y-3 text-sm text-blue-200">
        <div class="flex items-center gap-3">
          <span class="w-6 h-6 bg-green-400/20 rounded-full flex items-center justify-center text-green-400 text-xs">âœ“</span>
          Citizen's Charter & Transparency Seal built-in
        </div>
        <div class="flex items-center gap-3">
          <span class="w-6 h-6 bg-green-400/20 rounded-full flex items-center justify-center text-green-400 text-xs">âœ“</span>
          FOI Request system with tracking
        </div>
        <div class="flex items-center gap-3">
          <span class="w-6 h-6 bg-green-400/20 rounded-full flex items-center justify-center text-green-400 text-xs">âœ“</span>
          Emergency hotlines directory
        </div>
        <div class="flex items-center gap-3">
          <span class="w-6 h-6 bg-green-400/20 rounded-full flex items-center justify-center text-green-400 text-xs">âœ“</span>
          Free forever for barangays
        </div>
      </div>
    </div>
  </div>

  <!-- Right Panel â€” Form -->
  <div class="flex-1 flex items-center justify-center bg-gray-50 py-12 px-8">
    <div class="max-w-md w-full">
      <div class="mb-8">
        <p class="text-xs text-gray-400 uppercase tracking-wider font-medium mb-2">Republic of the Philippines</p>
        <h1 class="text-2xl font-bold text-blue-900">Create your account</h1>
        <p class="text-gray-500 mt-1 text-sm">Set up your barangay's official website</p>
      </div>

      <div class="bg-white p-8 rounded-xl shadow-sm border border-gray-200">
        <%= form_with(model: @user, url: signup_path, class: "space-y-5") do |f| %>
          <% if @user.errors.any? %>
            <div class="bg-red-50 border border-red-200 rounded-lg p-3 text-sm text-red-600">
              <% @user.errors.full_messages.each do |msg| %>
                <p><%= msg %></p>
              <% end %>
            </div>
          <% end %>

          <div>
            <%= f.label :name, "Full Name", class: "block text-xs font-bold text-gray-500 uppercase tracking-wider mb-1" %>
            <%= f.text_field :name, placeholder: "e.g. Juan Dela Cruz", class: "w-full px-4 py-3 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          </div>
          <div>
            <%= f.label :email, "Email Address", class: "block text-xs font-bold text-gray-500 uppercase tracking-wider mb-1" %>
            <%= f.email_field :email, placeholder: "you@email.com", class: "w-full px-4 py-3 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          </div>
          <div>
            <%= f.label :password, "Password", class: "block text-xs font-bold text-gray-500 uppercase tracking-wider mb-1" %>
            <%= f.password_field :password, placeholder: "Minimum 6 characters", class: "w-full px-4 py-3 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          </div>
          <div>
            <%= f.label :password_confirmation, "Confirm Password", class: "block text-xs font-bold text-gray-500 uppercase tracking-wider mb-1" %>
            <%= f.password_field :password_confirmation, class: "w-full px-4 py-3 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          </div>

          <%= f.submit "Create Account & Start Setup â†’", class: "w-full py-3 bg-blue-800 text-white font-bold rounded-lg hover:bg-blue-900 cursor-pointer text-sm" %>
        <% end %>
      </div>

      <p class="text-center text-gray-400 text-sm mt-6">
        Already have an account? <%= link_to "Log in here", login_path, class: "text-blue-600 font-medium hover:underline" %>
      </p>
    </div>
  </div>
</div>
