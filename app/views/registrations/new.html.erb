<% content_for(:title) { "Sign Up â€” BarangaySite" } %>

<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4">
  <div class="max-w-md w-full">
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold text-blue-700">ğŸ˜ï¸ BarangaySite</h1>
      <p class="text-gray-500 mt-2">Create your barangay's website in minutes</p>
    </div>

    <div class="bg-white p-8 rounded-xl shadow-sm border border-gray-200">
      <h2 class="text-xl font-bold mb-6">Create your account</h2>

      <%= form_with(model: @user, url: signup_path, class: "space-y-4") do |f| %>
        <% if @user.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-lg p-3 text-sm text-red-600">
            <% @user.errors.full_messages.each do |msg| %>
              <p><%= msg %></p>
            <% end %>
          </div>
        <% end %>

        <div>
          <%= f.label :name, "Your Name", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :name, placeholder: "Juan Dela Cruz", class: "w-full px-4 py-3 border border-gray-300 rounded-lg" %>
        </div>
        <div>
          <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.email_field :email, placeholder: "you@email.com", class: "w-full px-4 py-3 border border-gray-300 rounded-lg" %>
        </div>
        <div>
          <%= f.label :password, "Password", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.password_field :password, class: "w-full px-4 py-3 border border-gray-300 rounded-lg" %>
        </div>
        <div>
          <%= f.label :password_confirmation, "Confirm Password", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.password_field :password_confirmation, class: "w-full px-4 py-3 border border-gray-300 rounded-lg" %>
        </div>

        <%= f.submit "Create Account & Start Building â†’", class: "w-full py-3 bg-blue-700 text-white font-bold rounded-lg hover:bg-blue-800 cursor-pointer" %>
      <% end %>

      <p class="text-center text-gray-400 text-sm mt-4">
        Already have an account? <%= link_to "Log in", login_path, class: "text-blue-600 hover:underline" %>
      </p>
    </div>
  </div>
</div>
