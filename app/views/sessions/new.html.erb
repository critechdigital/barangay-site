<% content_for(:title) { "Log In â€” BarangaySite" } %>

<div class="min-h-screen flex">
  <!-- Left Panel â€” Image -->
  <div class="hidden lg:flex lg:w-1/2 bg-blue-900 relative overflow-hidden">
    <img src="https://images.unsplash.com/photo-1577717903315-1691ae25ab3f?w=1200&q=80" alt="Philippine barangay hall" class="absolute inset-0 w-full h-full object-cover opacity-30">
    <div class="relative z-10 flex flex-col justify-center px-16 text-white">
      <div class="w-16 h-16 bg-white/10 rounded-full flex items-center justify-center text-3xl mb-6">ğŸ›</div>
      <h2 class="text-3xl font-bold leading-tight">Welcome back.</h2>
      <p class="text-blue-200 mt-4 leading-relaxed">
        Manage your barangay's official website. Update services, post announcements,
        and serve your community online.
      </p>
    </div>
  </div>

  <!-- Right Panel â€” Form -->
  <div class="flex-1 flex items-center justify-center bg-gray-50 py-12 px-8">
    <div class="max-w-md w-full">
      <div class="mb-8">
        <p class="text-xs text-gray-400 uppercase tracking-wider font-medium mb-2">Republic of the Philippines</p>
        <h1 class="text-2xl font-bold text-blue-900">Log in to your account</h1>
        <p class="text-gray-500 mt-1 text-sm">Access your barangay admin dashboard</p>
      </div>

      <div class="bg-white p-8 rounded-xl shadow-sm border border-gray-200">
        <%= form_with(url: login_path, class: "space-y-5") do |f| %>
          <div>
            <%= f.label :email, "Email Address", class: "block text-xs font-bold text-gray-500 uppercase tracking-wider mb-1" %>
            <%= f.email_field :email, placeholder: "you@email.com", class: "w-full px-4 py-3 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          </div>
          <div>
            <%= f.label :password, "Password", class: "block text-xs font-bold text-gray-500 uppercase tracking-wider mb-1" %>
            <%= f.password_field :password, class: "w-full px-4 py-3 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          </div>

          <%= f.submit "Log In", class: "w-full py-3 bg-blue-800 text-white font-bold rounded-lg hover:bg-blue-900 cursor-pointer text-sm" %>
        <% end %>
      </div>

      <p class="text-center text-gray-400 text-sm mt-6">
        Don't have an account? <%= link_to "Create one for free", signup_path, class: "text-blue-600 font-medium hover:underline" %>
      </p>
    </div>
  </div>
</div>
