<% steps = [
  { name: "Basics", path: basics_setup_path, step: 1 },
  { name: "Officials", path: officials_setup_path, step: 2 },
  { name: "Services", path: services_setup_path, step: 3 },
  { name: "Contact", path: contact_setup_path, step: 4 },
  { name: "Publish", path: preview_setup_path, step: 5 },
] %>

<nav class="bg-white shadow-sm mb-8">
  <div class="max-w-4xl mx-auto px-4 py-4">
    <div class="flex justify-between items-center mb-4">
      <h1 class="text-xl font-bold text-blue-700">ğŸ˜ï¸ Setup Your Barangay Site</h1>
      <span class="text-sm text-gray-500">Step <%= current_step %> of 5</span>
    </div>
    <div class="flex gap-2">
      <% steps.each do |s| %>
        <% active = s[:step] == current_step %>
        <% completed = s[:step] < current_step %>
        <%= link_to s[:name],
          s[:path],
          class: "flex-1 text-center py-2 rounded-lg text-sm font-medium transition #{
            active ? 'bg-blue-700 text-white' :
            completed ? 'bg-blue-100 text-blue-700' :
            'bg-gray-100 text-gray-400'
          }" %>
      <% end %>
    </div>
  </div>
</nav>
