<% content_for(:title) { "Step 1: Basics — BarangaySite" } %>
<%= render "wizard_nav", current_step: 1 %>

<div class="max-w-2xl mx-auto px-4">
  <h2 class="text-2xl font-bold mb-2">Tell us about your barangay</h2>
  <p class="text-gray-500 mb-8">Just the basics — name and where you're located.</p>

  <%= form_with(model: @site, url: basics_setup_path, method: :patch, class: "space-y-6") do |f| %>
    <div>
      <%= f.label :name, "Barangay Name *", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :name, placeholder: "e.g. Barangay San Antonio", class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= f.label :tagline, "Tagline (optional)", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :tagline, placeholder: "e.g. A progressive barangay in the heart of Quezon City", class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div class="grid grid-cols-2 gap-4">
      <div>
        <%= f.label :region, "Region", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.select :region, options_for_select([
          "NCR", "CAR", "Region I", "Region II", "Region III", "Region IV-A", "Region IV-B",
          "Region V", "Region VI", "Region VII", "Region VIII", "Region IX", "Region X",
          "Region XI", "Region XII", "Region XIII", "BARMM"
        ], @site.region), { include_blank: "Select region" }, class: "w-full px-4 py-3 border border-gray-300 rounded-lg" %>
      </div>
      <div>
        <%= f.label :province, "Province", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :province, placeholder: "e.g. Metro Manila", class: "w-full px-4 py-3 border border-gray-300 rounded-lg" %>
      </div>
    </div>

    <div class="grid grid-cols-2 gap-4">
      <div>
        <%= f.label :municipality, "City / Municipality", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :municipality, placeholder: "e.g. Quezon City", class: "w-full px-4 py-3 border border-gray-300 rounded-lg" %>
      </div>
      <div>
        <%= f.label :barangay, "Barangay", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :barangay, placeholder: "e.g. San Antonio", class: "w-full px-4 py-3 border border-gray-300 rounded-lg" %>
      </div>
    </div>

    <div class="pt-4">
      <%= f.submit "Next: Add Officials →", class: "w-full py-3 bg-blue-700 text-white font-bold rounded-lg hover:bg-blue-800 cursor-pointer" %>
    </div>
  <% end %>
</div>
