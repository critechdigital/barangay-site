<% content_for(:title) { "Step 4: Contact — BarangaySite" } %>
<%= render "wizard_nav", current_step: 4 %>

<div class="max-w-2xl mx-auto px-4">
  <h2 class="text-2xl font-bold mb-2">How can people reach your barangay?</h2>
  <p class="text-gray-500 mb-8">Add your contact details so constituents can find you.</p>

  <%= form_with(model: @site, url: contact_setup_path, method: :patch, class: "space-y-6") do |f| %>
    <div>
      <%= f.label :address, "Barangay Hall Address *", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :address, placeholder: "e.g. 123 Main Street, Brgy. San Antonio, Quezon City", class: "w-full px-4 py-3 border border-gray-300 rounded-lg" %>
    </div>

    <div class="grid grid-cols-2 gap-4">
      <div>
        <%= f.label :phone, "Phone Number", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :phone, placeholder: "e.g. (02) 1234-5678", class: "w-full px-4 py-3 border border-gray-300 rounded-lg" %>
      </div>
      <div>
        <%= f.label :email, "Email Address", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.email_field :email, placeholder: "e.g. barangay@gmail.com", class: "w-full px-4 py-3 border border-gray-300 rounded-lg" %>
      </div>
    </div>

    <div>
      <%= f.label :office_hours, "Office Hours", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :office_hours, placeholder: "e.g. Monday-Friday, 8:00 AM - 5:00 PM", class: "w-full px-4 py-3 border border-gray-300 rounded-lg" %>
    </div>

    <div class="flex gap-4 pt-4">
      <%= link_to "← Back", services_setup_path, class: "flex-1 py-3 text-center border border-gray-300 rounded-lg text-gray-600 hover:bg-gray-50" %>
      <%= f.submit "Next: Preview & Publish →", class: "flex-1 py-3 bg-blue-700 text-white font-bold rounded-lg hover:bg-blue-800 cursor-pointer" %>
    </div>
  <% end %>
</div>
