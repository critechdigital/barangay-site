<% content_for(:title) { "Step 2: Officials — BarangaySite" } %>
<%= render "wizard_nav", current_step: 2 %>

<div class="max-w-2xl mx-auto px-4">
  <h2 class="text-2xl font-bold mb-2">Who runs your barangay?</h2>
  <p class="text-gray-500 mb-8">Add your officials. Positions are pre-filled — just type their names.</p>

  <%= form_with(model: @site, url: officials_setup_path, method: :patch, class: "space-y-4") do |f| %>
    <%= f.fields_for :officials do |of| %>
      <div class="bg-white p-4 rounded-lg border border-gray-200 flex gap-4 items-center">
        <div class="flex-1">
          <%= of.label :position, class: "block text-xs font-medium text-gray-500 mb-1" %>
          <%= of.text_field :position, class: "w-full px-3 py-2 border border-gray-300 rounded-lg text-sm" %>
        </div>
        <div class="flex-1">
          <%= of.label :name, "Full Name", class: "block text-xs font-medium text-gray-500 mb-1" %>
          <%= of.text_field :name, placeholder: "e.g. Juan Dela Cruz", class: "w-full px-3 py-2 border border-gray-300 rounded-lg text-sm" %>
        </div>
        <%= of.hidden_field :sort_order %>
        <div class="pt-5">
          <%= of.check_box :_destroy, class: "hidden", id: "destroy_#{of.index}" %>
          <%= of.label :_destroy, "✕", class: "text-red-400 hover:text-red-600 cursor-pointer text-lg" %>
        </div>
      </div>
    <% end %>

    <div class="flex gap-4 pt-4">
      <%= link_to "← Back", basics_setup_path, class: "flex-1 py-3 text-center border border-gray-300 rounded-lg text-gray-600 hover:bg-gray-50" %>
      <%= f.submit "Next: Services →", class: "flex-1 py-3 bg-blue-700 text-white font-bold rounded-lg hover:bg-blue-800 cursor-pointer" %>
    </div>
  <% end %>
</div>
