<% content_for(:title) { "Step 3: Services — BarangaySite" } %>
<%= render "wizard_nav", current_step: 3 %>

<div class="max-w-2xl mx-auto px-4">
  <h2 class="text-2xl font-bold mb-2">What services does your barangay offer?</h2>
  <p class="text-gray-500 mb-8">We've pre-loaded the common ones. Just uncheck any you don't offer.</p>

  <%= form_with(model: @site, url: services_setup_path, method: :patch, class: "space-y-3") do |f| %>
    <%= f.fields_for :services do |sf| %>
      <div class="bg-white p-4 rounded-lg border border-gray-200">
        <div class="flex items-start gap-3">
          <div class="pt-1">
            <%= sf.check_box :_destroy, { checked: false, class: "w-4 h-4 hidden" }, "0", "1" %>
          </div>
          <div class="flex-1">
            <div class="flex gap-4">
              <div class="flex-1">
                <%= sf.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-lg text-sm font-medium" %>
              </div>
              <div class="w-32">
                <%= sf.text_field :fees, class: "w-full px-3 py-2 border border-gray-200 rounded-lg text-sm text-gray-600", placeholder: "Fee" %>
              </div>
            </div>
            <div class="grid grid-cols-2 gap-4 mt-2">
              <div>
                <%= sf.text_field :processing_time, class: "w-full px-3 py-2 border border-gray-200 rounded-lg text-xs text-gray-500", placeholder: "Processing time" %>
              </div>
              <div>
                <%= sf.text_field :requirements, class: "w-full px-3 py-2 border border-gray-200 rounded-lg text-xs text-gray-500", placeholder: "Requirements" %>
              </div>
            </div>
          </div>
          <%= sf.hidden_field :sort_order %>
          <%= sf.hidden_field :category %>
        </div>
      </div>
    <% end %>

    <div class="flex gap-4 pt-4">
      <%= link_to "← Back", officials_setup_path, class: "flex-1 py-3 text-center border border-gray-300 rounded-lg text-gray-600 hover:bg-gray-50" %>
      <%= f.submit "Next: Contact Info →", class: "flex-1 py-3 bg-blue-700 text-white font-bold rounded-lg hover:bg-blue-800 cursor-pointer" %>
    </div>
  <% end %>
</div>
